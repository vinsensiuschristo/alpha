<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alpha" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightGRP</item>
        <item name="colorPrimaryVariant">@color/primaryDarkGRP</item>
        <item name="colorOnPrimary">@color/primaryGRP</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryGRP</item>
        <item name="colorSecondaryVariant">@color/secondaryLightGRP</item>
        <item name="colorOnSecondary">@color/secondaryDarkGRP</item>
